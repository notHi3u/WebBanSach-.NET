@model Genre

<h2>Genre Details</h2>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.GenreName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.GenreName)
    </dd>
</dl>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<h3>Books</h3>
@if (Model.Books != null && Model.Books.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Author Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.BookName</td>
                    <td>@book.AuthorName</td>
                    <td>@book.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books associated with this genre.</p>
}
