@model Book

<h2>Add Book</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="BookName"></label>
        <input asp-for="BookName" class="form-control" />
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorName"></label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div

    <div class="form-group">
        
    </div>

    <div class="form-group">
        <label asp-for="GenreName"></label>
        <select asp-for="GenreName" asp-items="@ViewBag.Genres" class="form-control"></select>
        <span asp-validation-for="GenreName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>
</form>

