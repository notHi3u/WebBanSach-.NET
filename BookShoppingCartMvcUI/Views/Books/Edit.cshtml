@model BookShoppingCartMvcUI.ViewModel.BookEditModel

<h2>Edit Book</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="BookName"></label>
        <input asp-for="BookName" class="form-control" />
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorName"></label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GenreName"></label>
        <select asp-for="GenreName" asp-items="@ViewBag.Genres" class="form-control"></select>
        <span asp-validation-for="GenreName" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    </br>
    <button type="submit" class="btn btn-primary">Update Book</button>
</form>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
